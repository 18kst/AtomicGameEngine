{
    "compilerOptions": {
        "module": "system",
        "target": "ES6",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./out",
        "outFile": "../../Data/AtomicEditor/CodeEditor/editor.bundle.js",
        "moduleResolution": "classic",
        "sourceMap": true
    },
    "filesGlob": [
        "./**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "./editor/editor.ts",
        "./editor/editorConfig.ts",
        "./interop.ts",
        "./typings/ace.d.ts",
        "./typings/AtomicQuery.d.ts"
    ]
}
